<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app_icon_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_2"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicaIartes"
        tools:targetApi="31">

        <!-- Splash screen deve ser a launcher activity -->
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Outras activities -->
        <activity
            android:name=".activities.TelaLogin"
            android:exported="false" />
        <activity
            android:name=".activities.PlaylistDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".activities.TrackDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MusicDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
    </application>

</manifest>
