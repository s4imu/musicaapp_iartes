<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundtwo"
    android:padding="16dp">

    <TextView
        android:id="@+id/textMusicaNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textMusicaArtista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Artista"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textMusicaNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textMusicaAlbum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Álbum"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textMusicaArtista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textMusicaDuracao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Duração"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textMusicaAlbum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textMusicaLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir no Spotify"
        android:textColor="@color/preto"
        android:textStyle="italic"
        android:autoLink="web"
        app:layout_constraintTop_toBottomOf="@id/textMusicaDuracao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
