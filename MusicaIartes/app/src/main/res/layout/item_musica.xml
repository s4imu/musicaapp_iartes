<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageMusica"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/capa_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textNomeMusica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome da MÃºsica"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imageMusica"
        app:layout_constraintTop_toTopOf="@id/imageMusica"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textArtistaMusica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Artista"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textNomeMusica"
        app:layout_constraintStart_toStartOf="@id/textNomeMusica"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
